@model IEnumerable<Contoso_University.Models.Student>

@{
	ViewData["Title"] = "Merge";
}

<h1>Merge</h1>

<h4>Student</h4>

<hr />
<form asp-action="MergeSelected">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.FirstMidName)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.EnrollmentDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstMidName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrollmentDate)
                    </td>
                    <td>
                        <input type="checkbox" id="student_@item.ID" name="selectedStudents" value="@item.ID" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <input type="submit" value="Merge Selected" class="btn btn-primary" />
</form>

<div>
    <a asp-action="Index">Back to list</a>
</div>