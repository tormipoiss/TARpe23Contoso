@model Contoso_University.Models.Department

@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure about that?</h3>

<div>
	<h4>Department</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Administrator)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Administrator.FullName)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Budget)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Budget)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.StartDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.StartDate)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.FavoriteFood)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.FavoriteFood)
		</dd>

		<dt class="col-sm-2">
			@{
				if (Model.EmployeeAmount != null)
				{
					@Html.DisplayNameFor(model => model.EmployeeAmount)
				}
			}
		</dt>
		<dd class="col-sm-10">
			@{
				if (Model.EmployeeAmount != null)
				{
					@Html.DisplayFor(model => model.EmployeeAmount)
				}
			}
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="@Model.DepartmentID" />
		<input type="submit" value="Delete" class="btn btn-danger" /> | <a asp-action="Index">Cancel</a>
	</form>
</div>